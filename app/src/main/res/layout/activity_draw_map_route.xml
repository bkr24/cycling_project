<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="aston.rogalskb.cyclingproject_v3.drawMapRoute">

    <Button
        android:id="@+id/mapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Draw route"
        />



    <fragment
        android:id="@+id/MapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="720dp"
        />

    <TextView
        android:id="@+id/drawRouteDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Distance"
        android:textStyle="bold"
        android:textColor="@color/quantum_black_100"/>

    <TextView
        android:id="@+id/drawRouteTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Time"
        android:textStyle="bold"
        android:textColor="@color/quantum_black_100"/>

    <TextView
        android:id="@+id/drawRouteWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textColor="@color/quantum_black_100"
        android:text="Weather" />

    <TextView
        android:id="@+id/drawRouteTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textColor="@color/quantum_black_100"
        android:text="Temperature" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/drawRouteSaveRouteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/ic_save_black_24dp" />





</FrameLayout>
